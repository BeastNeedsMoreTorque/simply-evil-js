{
  "name": "simply-evil-js",
  "version": "2.1.2",
  "description": "Just a simple npm based build system starter template",
  "author": "Ian Hofmann-Hicks (evil)",
  "repository": "https://github.com/evilsoft/simply-evil-js",
  "license": "ISC",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "html": "pug src/pages -o dev -w",
    "bundle": "webpack",
    "serve": "browser-sync start --config bs.config.js",
    "prebuild": "rm -Rf dist && mkdir -p dist",
    "build": "webpack",
    "prestart": "rm -Rf dev && mkdir -p dev",
    "start": "npm-run-all --parallel bundle html serve"
  },
  "devDependencies": {
    "babel-core": "^6.2.4",
    "babel-loader": "^6.1.0",
    "babel-polyfill": "^6.2.4",
    "babel-preset-es2015": "^6.2.4",
    "browser-sync": "^2.7.3",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "less": "^2.5.0",
    "less-loader": "^2.2.2",
    "less-plugin-autoprefix": "^1.4.2",
    "node-libs-browser": "^1.0.0",
    "npm-run-all": "^3.1.1",
    "pug-cli": "^1.0.0-alpha1",
    "style-loader": "^0.13.0",
    "webpack": "^1.9.8",
    "webpack-merge": "^0.14.1"
  },
  "dependencies": {
    "lodash": "^4.0.0",
    "ramda": "^0.22.1"
  }
}
